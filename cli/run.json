{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$comment": "This schema is written for runner.toml files",
  "fileMatch": [
    "runner.toml"
  ],
  "properties": {
    "BuildDir": {
      "type": "string"
    },
    "BuildType": {
      "type": "string"
    },
    "CMakeMinimumVersion": {
      "type": "string"
    },
    "CacheClean": {
      "type": "boolean"
    },
    "Compiler": {
      "type": "string"
    },
    "CompilerPath": {
      "type": "string"
    },
    "ExtraCMakePrefixPath": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "ExtraFileNames": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "ExtraIncludePath": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "ExtraLibs": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "FileName": {
      "type": "string"
    },
    "Flags": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "IncludePath": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "IsExecute": {
      "type": "boolean"
    },
    "Language": {
      "type": "string"
    },
    "LibraryPath": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "ProjectName": {
      "type": "string"
    },
    "ReBuild": {
      "type": "boolean"
    },
    "SourceDir": {
      "type": "string"
    },
    "TargetLibs": {
      "items": {
        "type": "string"
      },
      "type": [
        "array",
        "null"
      ]
    },
    "TargetName": {
      "type": "string"
    }
  }
}
